{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "./",
    "sourceMap": true,
    "outDir": "dist",
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom", "esnext"]
  },
  "files": ["package.json"],
  "include": ["src"],
  "exclude": ["node_modules", "build", "dist"]
}
